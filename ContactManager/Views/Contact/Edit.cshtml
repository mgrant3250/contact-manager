@model Contact

<!--displays either add or edit contact depending on what Viewbag.Action is-->
@{
    string title = ViewBag.Action + " Contact";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="mb-3">
       <label asp-for="CategoryId" class="form-label">Category</label>
       <select asp-for="CategoryId" class="form-select">
           <option value="">select a category</option>
            @foreach(Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.Name</option>
            }
        </select>
    </div>

   <input type="hidden" asp-for="ContactId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <!--if else statement that takes back to home if canceling when adding contact and back to details if cancelling when editing contact-->
    @if (Model.ContactId != 0)
    {
        <a asp-controller="Contact" asp-action="Details" asp-route-id="@Model.ContactId"
        asp-route-slug="@Model.Slug" class="btn btn-primary">Cancel</a>
    }
    else{
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
    }
</form>
