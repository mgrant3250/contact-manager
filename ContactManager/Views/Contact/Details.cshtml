@model Contact

@{
    ViewData["Title"] = "Contact Details";
}

<h2>Contact Details</h2>

<table class="table table-bordered">
    <tr>
        <td>Name: </td>
        <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <td>Phone: </td>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <td>Email: </td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Category</td>
        <td>@Model.Category.Name</td>
    </tr>
    <tr>
        <td>Date Added: </td>
        <td>@Model.DateAdded.ToString("MM/dd/yyyy") at @Model.DateAdded.ToString("hh:mm tt") </td>
    </tr>
</table>

<a asp-controller="Contact" asp-action="Edit" 
   asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
   class="btn btn-primary">Edit</a>

<a asp-controller="Contact" asp-action="Delete"
   asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
   class="btn btn-primary">Delete</a>

<a asp-controller="Home" asp-action="Index"
   class="btn btn-primary">Home</a>
